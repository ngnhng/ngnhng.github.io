---
import "@/styles/globals.css";

import Sidebar from "@/components/Sidebar.astro";
import TopMenu from "@/components/TopMenu.astro";

interface Props {
  showSidebar?: boolean;
}

const { showSidebar } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>ngnhng's notes</title>
  </head>
  <body>
    <div id="container" class="min-h-screen flex flex-col pb-16">
      <TopMenu />

      <main class="lg:ml-64 pt-16 p-6">
        <div
          class="max-w-7xl mx-auto space-y-12 p-5 pt-20 mt-20 md:pt-32 md:mt-2"
        >
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: system-ui, sans-serif;
  }
</style>
