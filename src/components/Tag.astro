---
import { Link } from "./ui/link";

interface Props {
  href?: string;
  value: string;
  key: string;
}

const { value, key, href } = Astro.props;

const tagColorMap = {
  go: "bg-blue-200 text-blue-700 border-blue-400",
  java: "bg-red-200 text-red-700 border-red-400",
  workflow: "bg-green-200 text-green-700 border-green-400",
  database: "bg-yellow-200 text-yellow-700 border-yellow-400",
  interview: "bg-purple-200 text-purple-700 border-purple-400",
};

const colorClass =
  tagColorMap[value.toLowerCase()] ||
  "bg-gray-200 text-gray-700 border-gray-400";
// const glowClass = `neon-${colorClass.split(" ")[0].split("-")[1]}`;
---

{
  href ? (
    <Link href={href}>
      <span
        id={key}
        class={`text-xs font-medium rounded-full px-2 py-1 mr-2 mb-2 border ${colorClass} `}
      >
        {value}
      </span>
    </Link>
  ) : (
    <span
      id={key}
      class={`text-xs font-medium rounded-full px-2 py-1 mr-2 mb-2 border ${colorClass} `}
    >
      {value}
    </span>
  )
}
