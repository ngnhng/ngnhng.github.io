---
import { ArticleCard } from "./ui/article-card";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  imagePath?: string;
  altText?: string;
  name?: string;
  category?: string;
  date?: string;
  href?: string;
  large?: boolean;
  tags?: string[];
}

const { imagePath, altText, name, category, date, href, large, tags } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  `/src/assets/*.{jpeg,jpg,png,gif,webp}`
);

if (!imagePath || !images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`
  );
---

<ArticleCard
  category={category}
  title={name}
  date={date}
  href={href}
  large={large}
  tags={tags}
>
  <Image src={images[imagePath]()} alt={altText ?? ""} />
</ArticleCard>
