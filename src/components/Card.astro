---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import ArticleCard from "./ArticleCard.astro";

interface Props {
  imagePath?: string;
  altText?: string;
  name?: string;
  date?: string;
  href?: string;
  large?: boolean;
  tags?: string[];
}

const { imagePath, altText, name, date, href, large, tags } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  `/src/assets/*.{jpeg,jpg,png,gif,webp}`
);

if (!imagePath || !images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`
  );
---

<ArticleCard title={name} date={date} href={href} large={large} tags={tags}>
  <Image src={images[imagePath]()} alt={altText ?? ""} />
</ArticleCard>
